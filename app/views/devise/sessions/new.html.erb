<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<section class="vh-100">
  <div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-9 col-lg-6 col-xl-5">
        <img src="https://mdbootstrap.com/img/Photos/new-templates/bootstrap-login-form/draw2.png" class="img-fluid"
             alt="Sample image">
      </div>
      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
        <form>
          <div class="d-flex flex-row align-items-center justify-content-center justify-content-lg-start">
            <p class="lead fw-normal mb-0 me-3"><strong>Sign in</strong> with</p>
            <button type="button" class="btn btn-primary btn-floating mx-1">
              <i class="fab fa-facebook-f"></i>
            </button>

            <button type="button" class="btn btn-primary btn-floating mx-1">
              <i class="fab fa-twitter"></i>
            </button>

            <button type="button" class="btn btn-primary btn-floating mx-1">
              <i class="fab fa-linkedin-in"></i>
            </button>
          </div>

          <div class="divider d-flex align-items-center my-4">
            <p class="text-center fw-bold mx-3 mb-0">Or</p>
          </div>

          <!-- Email input -->
          <div class="form-outline mb-4">
            <%= f.input_field :email,
                        id:"form3Example3",
                        class:"form-control form-control-lg",
                        required: false,
                        autofocus: true,
                        placeholder:"Enter a valid email address",
                        input_html: { autocomplete: "email" } %>
            <label class="form-label" for="form3Example3">Email address</label>
          </div>

          <!-- Password input -->
          <div class="form-outline mb-3">
            <%= f.input_field :password,
                        id:"form3Example4",
                        class:"form-control form-control-lg",
                        placeholder:"Enter password",
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, class:"form-check-input me-2", as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="d-flex justify-content-between align-items-center">
            <a href="#!" class="text-body">Forgot password?</a>
          </div>

          <div class="text-center text-lg-start mt-4 pt-2">
            <%= f.button :submit, "Log in", class:"btn btn-primary btn-lg", :style=>'padding-left: 2.5rem; padding-right: 2.5rem;' %>
            <p class="small fw-bold mt-2 pt-1 mb-0">Don't have an account? <a href="#!"
                                                                              class="link-danger">Register</a></p>
            <%= render "devise/shared/links" %>

          </div>

        </form>
      </div>
    </div>
  </div>
</section>
<% end %>
